<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicios.MainPage">

    <Border
        Stroke="Purple"
        StrokeThickness="5"
        StrokeShape="RoundRectangle 40,40,0,0">


        <StackLayout Padding="100"
                     Spacing="20">

            <Button Text="Boton1" MaximumHeightRequest="150"
                Padding="20"
                BorderColor="Black"
                BorderWidth="10"
                MaximumWidthRequest="100"/>
            <Button Text="Boton2" Padding="20"
                        MaximumWidthRequest="100"
                />
            <Button Text="Boton3" Padding="20" 
                     MaximumWidthRequest="100"
                />
            <HorizontalStackLayout HorizontalOptions="Center">

                <Label Text="Nombre:" Margin="10"></Label>
                <Entry BackgroundColor="LightBlue" MinimumWidthRequest="120"></Entry>

            </HorizontalStackLayout>
        </StackLayout>




    </Border>


</ContentPage>
