<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio3AbsoluteLayout.MainPage">
        
    <AbsoluteLayout>
        <BoxView
            BackgroundColor="Red"
            AbsoluteLayout.LayoutBounds="0,0,100,100">
        </BoxView>
        <BoxView
            BackgroundColor="Blue"
            AbsoluteLayout.LayoutBounds="100,0,200,100">
        </BoxView>
        <BoxView
            BackgroundColor="Green"
            AbsoluteLayout.LayoutBounds="0,100,300,100">
        </BoxView>
        <BoxView
            BackgroundColor="Yellow"
               AbsoluteLayout.LayoutBounds="100,200,1,1"
               AbsoluteLayout.LayoutFlags="WidthProportional,HeightProportional"
            
            >
            </BoxView>

    </AbsoluteLayout>
    
    <!--0,0,0,0
    1º indica el espacio hacia la derecha
    2º Indica el espacio hacia abajo
    3º Indica la anchura
    4º Indica la altura-->

</ContentPage>
